<UserControl x:Class="GraphEditor.Node"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GraphEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             ContextMenu="{StaticResource ColorContextMenu}">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <!-- Эллипс -->
        <Ellipse x:Name="ellipse" Fill="White" Stroke="Black" StrokeThickness="5" 
                 Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" >
        </Ellipse>
        <!-- Текстовое поле для названия -->
        <TextBlock x:Name="nameTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" 
        MinWidth="10" Height="20" TextAlignment="Center" Margin="0,30,0,0 " 
        Background="Transparent" Foreground="Black" FontFamily="Times New Roman" />
    </Grid>
</UserControl>
