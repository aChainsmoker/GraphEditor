<Window x:Class="GraphEditor.NodeNameInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="150" Width="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите имя узла:" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="nameInputTextBox" Width="200" HorizontalAlignment="Center" KeyDown="OnKeyPressedTextBox"/>
            <Button Content="OK" Width="50" HorizontalAlignment="Center" Margin="10" Click="OnOkButtonClick"/>
        </StackPanel>
    </Grid>
</Window>