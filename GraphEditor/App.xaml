<Application x:Class="GraphEditor.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GraphEditor"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Глобальный ресурс для контекстного меню -->
        <ContextMenu x:Key="ColorContextMenu">
            <MenuItem Header="Black" Click="ChangeColor_Click" Tag="Black"/>
            <MenuItem Header="Red" Click="ChangeColor_Click" Tag="Red"/>
            <MenuItem Header="Green" Click="ChangeColor_Click" Tag="Green"/>
            <MenuItem Header="Blue" Click="ChangeColor_Click" Tag="Blue"/>
            <MenuItem Header="Yellow" Click="ChangeColor_Click" Tag="Yellow"/>
        </ContextMenu>
    </Application.Resources>
</Application>
