<Window x:Class="GraphEditor.EdgeWeightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GraphEditor"
        mc:Ignorable="d"
        Title="" Height="150" Width="300">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите вес ребра" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBox x:Name="weightInputTextbox" Width="200" HorizontalAlignment="Center" KeyDown="OnKeyPressedTextBox"/>
            <Button Content="OK" Width="50" HorizontalAlignment="Center" Margin="10" Click="OnOkButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
