<UserControl x:Class="GraphEditor.Edge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             ContextMenu="{StaticResource ColorContextMenu}">
    <Canvas Name="MainGrid">
            <Polygon Points="0,0 0,20 17.32,10" x:Name="arrowHead" 
                 
              Stroke="Black" 
              Fill="Green" 
              StrokeThickness="2"
              Width="20" 
              Height="20" RenderTransformOrigin="0.2, 0.46">
        </Polygon>
        <TextBlock x:Name="weightTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" 
MinWidth="10" Height="10" TextAlignment="Center" Margin="0,30,0,0 " 
Background="Transparent" Foreground="Black" FontFamily="Times New Roman"/>
    </Canvas>

</UserControl>
